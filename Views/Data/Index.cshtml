@{
    ViewData["Title"] = "Data Management";
}

<h2>Data Management</h2>

<p>Use this page to fetch the latest eCFR data from the official source.</p>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">
        @TempData["Message"]
    </div>
}

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Fetch eCFR Data</h5>
        <p class="card-text">
            Click the button below to download and store the data for <strong>Title 42 (Public Health)</strong>.
            This process may take a few minutes depending on the amount of data.
        </p>
        <form asp-action="FetchData" method="post">
            <button type="submit" class="btn btn-primary">Fetch and Store eCFR Data</button>
        </form>
    </div>
</div>